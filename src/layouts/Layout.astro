---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="nl" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="robots" content="noindex, nofollow">
    <meta name="description" content="Luister {Astro.metadata} op ZuidWest FM terug" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script defer src="https://stats.zuidwesttv.nl/js/script.js"></script>
  </head>
  <body class="h-full">
    <slot />
  </body>
</html>
